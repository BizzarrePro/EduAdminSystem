<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="default" extends="struts-default">
		<action name="user" class="team.hnucs.edu.action.LoginAction" method="login">
			<result name="student">/homepage_student.jsp</result>
			<result name="teacher">/homepage_teacher.jsp</result>
			<result name="administrator">/homepage_manager.jsp</result>
			<result name="loginError">/Error.jsp</result>
		</action>
		<action name="save_student" class="AdminManageStudentAction" method="save">
			<result name="save">/addStudentSuccess.jsp</result>
		</action>
		<action name="save_teacher" class="AdminManageTeacherAction" method="save">
			<result name="save">/addTeacherSuccess.jsp</result>
		</action>
		<action name="update_teacher" class="AdminManageTeacherAction" method="update">
			<result name="update">/modifyTeacherSuccess.jsp</result>
		</action>
		<action name="save_course" class="AdminManageCourseAction" method="save">
			<result name="save">/addCourseSuccess.jsp</result>
		</action>
		<action name="del_course" class="AdminManageCourseAction" method="delete">
			<result name="delete">/deleteCourseSuccess.jsp</result>
		</action>
		<action name="del_student" class="AdminManageStudentAction" method="delete">
			<result name="delete">/deleteStudentSuccess.jsp</result>
		</action>
		<action name="findall_student" class="AdminManageStudentAction" method="findAll">
			<result name="findAll">/viewStudent.jsp</result>
		</action>
		<action name="save_score" class="TeacherManageStudentAction" method="saveScore">
			<result name="save">/addGrade.jsp</result>
			<result name="error">/addGradeFail.jsp</result>
		</action>
	</package>
</struts>